<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/acBtn_img"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Touch It"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="ClickListeners"
        />
    <ViewStub
        android:id="@+id/view_stub"
        android:layout="@layout/activity_main2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/acBtn_img"
        />
    <include layout="@layout/activity_main3" app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.v7.widget.LinearLayoutCompat>