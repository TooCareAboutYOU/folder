<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llCt_Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Java2-高级用发"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/acBtn_Download"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:text="后台执行耗时操作，实时通知 UI 更新"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/acBtn_Average"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:text="计算一段时间内数据的平均值"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/acBtn_Search"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:text="优化搜索联想功能"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/acBtn_Retrofit"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:text="结合 Retrofit 请求新闻资讯"/>

</android.support.v7.widget.LinearLayoutCompat>